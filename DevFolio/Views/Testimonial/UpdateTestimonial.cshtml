@model DevFolio.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncellem</h2>

<form method="post">
    @Html.HiddenFor(x => x.TestimonialID, new { @class = "form-control" })
    <label>İsim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Yorumu</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    @*<label>Durum</label>
        <input type="text" class="form-control" name="Status" value="@Model.Status" />
        <br />*@
    <button class="btn btn-info"> Referans Güncelle</button>
</form>

