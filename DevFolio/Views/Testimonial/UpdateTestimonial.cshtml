@model DevFolio.Models.TblTestimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Güncellem</h2>

<form method="post">
    <input type="hidden" name="TestimonialID" value="@Model.TestimonialID" />
    <label>İsim</label>
    <input type="text" class="form-control" name="NameSurname" value="@Model.NameSurname" />
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" name="Description" value="@Model.Description"/>
    <br />
    <label>Fotoğraf</label>
    <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl" />
    <br />
    <label>Durum</label>
    <input type="text" class="form-control" name="Status" value="@Model.Status" />
    <br />
    <button class="btn btn-info"> Referans kısmını Kaydet</button>
</form>

