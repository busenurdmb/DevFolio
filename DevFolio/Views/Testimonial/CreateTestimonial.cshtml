@model DevFolio.Models.TblTestimonial
@{
    ViewBag.Title = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Referans Girişi</h2>

<form method="post">
    <label>İsim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Yorumu</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    @*<label>Durum</label>
    <input type="text" class="form-control" name="Status" />*@
    <br />
    <button class="btn btn-info"> Referans kısmını Kaydet</button>
</form>

