@model DevFolio.Models.TblAdmin

@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Admin Güncelleme</h2>

<form method="post">
    <input type="hidden" name="AdminID" value="@Model.AdminID" />
    <label>Kullanıcı Adı</label>
    <input type="text" class="form-control" name="Username" value="@Model.Username" />
    <br />
    <label>Şifre</label>
    <input type="text" class="form-control" name="Password" value="@Model.Password"  />
    <br />
    <button class="btn btn-info"> Admin Kaydet</button>
</form>

