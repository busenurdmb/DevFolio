@model List<DevFolio.Models.TblAdmin>

@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Listesi</h2>
@{ if (Model.Count == 0)
    {
    <td><a href="/Admin/CreateAdmin" class="btn btn-info">Ekle</a></td>
    }}
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kulllanıcı Adı</th>
        <th>Şifre</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdminID</td>
            <td>@item.Username</td>
            <td>@item.Password</td>

            <td><a href="/Admin/DeleteAdmin/@item.AdminID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/UpdateAdmin/@item.AdminID" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>


